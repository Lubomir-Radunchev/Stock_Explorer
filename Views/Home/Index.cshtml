@using Stock_Explorer.DTO
@model SearchCriteria
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group col">
            <label class="text-white" asp-for="Name"></label>
            <textarea asp-for="Name" rows="4" class="form-control" placeholder="Search stock"></textarea>
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>

        <input class="btn-lg btn-primary mt-3" type="submit" value="Search" />
    </form>
</div>
